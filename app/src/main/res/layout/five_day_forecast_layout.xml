            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="56°" />

        <TextView
            android:id="@+id/fifth_forecast_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fifth_forecast_max"
            android:textSize="20sp"
            tools:text="56°" />

    </RelativeLayout>


</LinearLayout>