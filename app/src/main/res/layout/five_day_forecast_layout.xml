<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_forecast_max"
            style="@style/ForecastElement"
            tools:text="56°" />

        <TextView
            android:id="@+id/first_forecast_min"
            style="@style/ForecastElement"
            tools:text="9°" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/second_forecast_max"
            style="@style/ForecastElement"
            tools:text="56°" />

        <TextView
            android:id="@+id/second_forecast_min"
            style="@style/ForecastElement"
            tools:text="9°" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/third_forecast_max"
            style="@style/ForecastElement"
            tools:text="56°" />

        <TextView
            android:id="@+id/third_forecast_min"
            style="@style/ForecastElement"
            tools:text="9°" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fourth_forecast_max"
            style="@style/ForecastElement"
            tools:text="56°" />

        <TextView
            android:id="@+id/fourth_forecast_min"
            style="@style/ForecastElement"
            tools:text="9°" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fifth_forecast_max"
            style="@style/ForecastElement"
            tools:text="56°" />

        <TextView
            android:id="@+id/fifth_forecast_min"
            style="@style/ForecastElement"
            tools:text="9°" />

    </LinearLayout>


</LinearLayout>